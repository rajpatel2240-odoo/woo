<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="WCDashboardMain">
        <div id="page-content" class="o_wc_dashboard">
            <div class="row">
                <div class="col-lg-3 col-sm-6 col-md-6 col-xs-12">
                    <div class="widgetbox widgetbox-default widgetbox-item-icon"
                         style="box-shadow: 3px 3px 3px 3px grey;">
                        <div class="widgetbox-item-left widgetbox-icon-Lavender wc_orders">
                            <span class="fa fa-shopping-cart"/>
                        </div>
                        <div class="widgetbox-data-right wc_orders">
                            <div class="widgetbox-int">
                                <t t-esc="widget.wc_instance.total_orders"/>
                            </div>
                            <div class="widgetbox-title">Orders</div>
                        </div>
                        <div class="btn-group" style="float:right;">
                            <button class="btn btn-success dropdown-toggle" data-toggle="dropdown" type="button"
                                    aria-expanded="false">
                                Action
                            </button>
                            <ul class="dropdown-menu" style="background-color:#e6ffe6">
                                <li>
                                    <a href="" class="import_wc_orders dropdown-item">Import Order</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-sm-6 col-md-6 col-xs-12">
                    <div class="widgetbox widgetbox-default widgetbox-item-icon"
                         style="box-shadow: 3px 3px 3px 3px grey;">
                        <div class="widgetbox-item-left widgetbox-icon-Lavender wc_invoices">
                            <span class="fa fa-money"/>
                        </div>
                        <div class="widgetbox-data-right wc_invoices">
                            <div class="widgetbox-int"><t t-esc="widget.wc_instance.total_invoices"/></div>
                            <div class="widgetbox-title">Invoice</div>
                        </div>
                        <div class="btn-group" style="float:right;visibility:hidden;">
                            <button class="btn btn-success dropdown-toggle" data-toggle="dropdown" type="button"
                                    aria-expanded="false">
                                Action
                                <i class="dropdown-caret fa fa-caret-down"/>
                            </button>
                            <ul class="dropdown-menu" style="background-color:#e6ffe6">
                                <li>
                                    <a href="" class="wc_draft_invoice">Draft Invoice</a>
                                    <a href="" class="wc_refund_invoice">Refund Invoice</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-sm-6 col-md-6 col-xs-12">
                    <div class="widgetbox widgetbox-default widgetbox-item-icon"
                         style="box-shadow: 3px 3px 3px 3px grey;">
                        <div class="widgetbox-item-left widgetbox-icon-Lavender wc_products">
                            <span class="fa fa-shopping-bag"/>
                        </div>
                        <div class="widgetbox-data-right wc_products">
                            <div class="widgetbox-int"><t t-esc="widget.wc_instance.total_products"/></div>
                            <div class="widgetbox-title">Products</div>
                        </div>
                        <div class="btn-group" style="float:right;">
                            <button class="btn btn-success dropdown-toggle" data-toggle="dropdown" type="button"
                                    aria-expanded="false">
                                Action
                            </button>
                            <ul class="dropdown-menu" style="background-color:#e6ffe6">
                                <li>
                                    <a href="" class="import_wc_products dropdown-item">Import/Sync Products</a>
                                    <a href="" class="export_wc_products dropdown-item">Export/Update Products</a>
                                    <a href="" class="import_wc_stock dropdown-item">Import Product's Stock</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-sm-6 col-md-6 col-xs-12">
                    <div class="widgetbox widgetbox-default widgetbox-item-icon"
                         style="box-shadow: 3px 3px 3px 3px grey;">
                        <div class="widgetbox-item-left widgetbox-icon-Lavender wc_delivery">
                            <span class="fa fa-truck"/>
                        </div>
                        <div class="widgetbox-data-right wc_delivery">
                            <div class="widgetbox-int"><t t-esc="widget.wc_instance.total_pickings"/></div>
                            <div class="widgetbox-title">Delivery</div>
                        </div>
                        <div class="btn-group" style="float:right;">
                            <button class="btn btn-success dropdown-toggle" data-toggle="dropdown" type="button"
                                    aria-expanded="false">
                                Action
                            </button>
                            <ul class="dropdown-menu dropdown-menu-right" style="background-color:#e6ffe6">
                                <li>
                                    <a href="" class="update_wc_order_status dropdown-item">Update Order Status</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-sm-6 col-md-6 col-xs-12">
                    <div class="widgetbox widgetbox-default widgetbox-item-icon"
                         style="box-shadow: 3px 3px 3px 3px grey;">
                        <div class="widgetbox-item-left widgetbox-icon-Lavender wc_customer">
                            <span class="fa fa-user"/>
                        </div>
                        <div class="widgetbox-data-right wc_customer">
                            <div class="widgetbox-int"><t t-esc="widget.wc_instance.total_partner"/></div>
                            <div class="widgetbox-title">Customers</div>
                        </div>
                        <div class="btn-group" style="float:right;">
                            <button class="btn btn-success dropdown-toggle" data-toggle="dropdown" type="button"
                                    aria-expanded="false">
                                Action
                            </button>
                            <ul class="dropdown-menu" style="background-color:#e6ffe6">
                                <li>
                                    <a href="" class="import_wc_customers dropdown-item">Import/Sync Customers</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-sm-6 col-md-6 col-xs-12">
                    <div class="widgetbox widgetbox-default widgetbox-item-icon"
                         style="box-shadow: 3px 3px 3px 3px grey;">
                        <div class="widgetbox-item-left widgetbox-icon-Lavender wc_coupon">
                            <span class="fa fa-ticket"/>
                        </div>
                        <div class="widgetbox-data-right wc_coupon">
                            <div class="widgetbox-int"><t t-esc="widget.wc_instance.total_coupons"/></div>
                            <div class="widgetbox-title">Coupons</div>
                        </div>
                        <div class="btn-group" style="float:right;">
                            <button class="btn btn-success dropdown-toggle" data-toggle="dropdown" type="button"
                                    aria-expanded="false">
                                Action
                            </button>
                            <ul class="dropdown-menu" style="background-color:#e6ffe6">
                                <li>
                                    <a href="" class="import_wc_coupons dropdown-item">Import/Sync Coupons</a>
                                    <a href="" class="export_update_wc_coupons dropdown-item">Export/Update Coupons</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-sm-6 col-md-6 col-xs-12">
                    <div class="widgetbox widgetbox-default widgetbox-item-icon"
                         style="box-shadow: 3px 3px 3px 3px grey;">
                        <div class="widgetbox-item-left widgetbox-icon-Lavender wc_category">
                            <span class="fa fa-list-alt"/>
                        </div>
                        <div class="widgetbox-data-right wc_category">
                            <div class="widgetbox-int"><t t-esc="widget.wc_instance.total_categs"/></div>
                            <div class="widgetbox-title">Category</div>
                        </div>
                        <div class="btn-group" style="float:right;">
                            <button class="btn btn-success dropdown-toggle" data-toggle="dropdown" type="button"
                                    aria-expanded="false">
                                Action
                            </button>
                            <ul class="dropdown-menu" style="background-color:#e6ffe6">
                                <li>
                                    <a href="" class="import_wc_categs dropdown-item">Import/Sync Category</a>
                                    <a href="" class="export_wc_categs dropdown-item">Export/Update Category</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-sm-6 col-md-6 col-xs-12">
                    <div class="widgetbox widgetbox-default widgetbox-item-icon"
                         style="box-shadow: 3px 3px 3px 3px grey;">
                        <div class="widgetbox-item-left widgetbox-icon-Lavender wc_tags">
                            <span class="fa fa-tag"/>
                        </div>
                        <div class="widgetbox-data-right wc_tags">
                            <div class="widgetbox-int"><t t-esc="widget.wc_instance.total_tags"/></div>
                            <div class="widgetbox-title">Tags</div>
                        </div>
                        <div class="btn-group" style="float:right;">
                            <button class="btn btn-success dropdown-toggle" data-toggle="dropdown" type="button"
                                    aria-expanded="false">
                                Action
                            </button>
                            <ul class="dropdown-menu dropdown-menu-right" style="background-color:#e6ffe6">
                                <li>
                                    <a href="" class="import_wc_tags dropdown-item">Import/Sync Tags</a>
                                    <a href="" class="export_wc_tags dropdown-item">Export/Update Tags</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <t t-if="widget.wc_instance.order_details">
                <div class="card" style="box-shadow: 3px 3px 3px 3px grey; background-color:#ffffff;">
                    <div class="card-header">
                        <h3 class="card-title">Latest Orders</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-bordered"
                               style="box-shadow: 3px 3px 3px 3px grey; background-color:#ffffff;">
                            <thead>
                                <tr>
                                    <th>Order Number</th>
                                    <th>Order Date</th>
                                    <th class="min-tablet">Customer</th>
                                    <th class="min-tablet">Sales Person</th>
                                    <th class="min-tablet">Total Amount</th>
                                    <th class="min-desktop">State</th>
                                    <th class="min-desktop">WooCommerce Instance</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="widget.wc_instance.order_details" t-as="order_details">
                                    <tr>
                                        <td>
                                            <t t-esc="order_details[0]"/>
                                        </td>
                                        <td>
                                            <t t-esc="order_details[1]"/>
                                        </td>
                                        <td>
                                            <t t-esc="order_details[2]"/>
                                        </td>
                                        <td>
                                            <t t-esc="order_details[3]"/>
                                        </td>
                                        <t t-if="order_details[8]=='before'">
                                        <td>
                                            <t t-esc="order_details[6]"/>
                                            <t t-esc="order_details[4]"/>
                                        </td>
                                        </t>
                                        <t t-if="order_details[8]=='after'">
                                        <td>
                                            <t t-esc="order_details[4]"/>
                                            <t t-esc="order_details[6]"/>
                                        </td>
                                        </t>
                                        <td>
                                            <t t-esc="order_details[5]"/>
                                        </td>
                                        <td>
                                            <t t-esc="order_details[7]"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
            <t t-if="!widget.wc_instance.order_details">
                <div class="panel" style="box-shadow: 3px 3px 3px 3px grey;">
                    <div class="panel-heading">
                        <h3 class="panel-title">There is no any WooCommerce Orders available yet</h3>
                    </div>
                </div>
            </t>
        </div>
    </t>
</templates>